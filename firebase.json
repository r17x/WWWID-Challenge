{
    "hosting":{
        "public": "build" ,
        "headers": [
            {
                "source": "**/*.@(js|css)",
                "headers":[
                    {"key": "Cache-Control","value": "max-age=108000000"}
                ]  
            },
            {
                "source": "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
                "headers":[
                    {"key": "Cache-Control","value": "max-age=108000000"}
                ]  
            },
            {
                "source": "**/*.@(jpg|jpeg|gif|png)",
                "headers":[
                    {"key": "Cache-Control","value": "max-age=108000000"}
                ]  
            },
            {
                "source": "/service-worker.js", 
                "headers": [
                    {"key": "Cache-Control", "value": "no-cache"}
                ]
            }
        ],
        "rewrites": [{
            "source": "**",
            "destination": "/index.html" 
        }]
    }
}

